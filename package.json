{
  "name": "react-enhanced-textarea",
  "version": "3.0.4",
  "description": "React enhanced textarea",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "jsnext:main": "build/index.es.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint && yarn test",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "build": "rollup -c",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/abelchee/react-enhanced-textarea.git"
  },
  "bugs": {
    "url": "https://github.com/abelchee/react-enhanced-textarea/issues"
  },
  "files": [
    "build"
  ],
  "homepage": "https://github.com/abelchee/react-enhanced-textarea",
  "author": "Abel Chee <abel.chee@gmail.com>",
  "license": "MIT",
  "private": false,
  "jest": {
    "testURL": "http://localhost/",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "raf/polyfill"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "jest": "^26.4.2",
    "jsdom": "^16.4.0",
    "prettier": "^2.1.2",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts-ts": "^3.1.0",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  }
}
