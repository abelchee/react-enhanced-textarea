    "postversion": "git push && git push --tags",
    "test": "jest",
    "build": "rollup -c",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": "git@github.com:abelchee/react-enhanced-textarea.git",
  "bugs": {
    "url": "https://github.com/abelchee/react-enhanced-textarea/issues"
  },
  "files": [
    "build"
  ],
  "homepage": "https://github.com/abelchee/react-enhanced-textarea",
  "author": "Abel Chee <abel.chee@gmail.com>",
  "license": "MIT",
  "private": false,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-test-renderer": "^16.9.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts-ts": "^3.1.0",
    "react-test-renderer": "^16.9.0",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  }
}
